<%- include('partials/header'); -%>

<h1>Home</h1>
<p> <%= homeStartingContent %> </p>


<% posts.forEach((post) => { %>
  <% let trimedContent = post.content.substring(0, 50) + "..." %>
  <h2> <%= post.title %> </h2>
  <p>
    <%= trimedContent %>
    <a href="posts/<%= post.title %>"> Read More</a>
  </p>

<% }); %>


<%- include('partials/footer'); -%>
